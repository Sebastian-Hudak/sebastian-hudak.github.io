---
layout: layouts/base.njk
title: Contact
permalink: /contact.html
headExtra: |
  <script src="https://code.jquery.com/jquery-2.2.0.min.js" type="text/javascript"></script>
  <link href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css" rel="stylesheet">
---

<section class="contact-page" id="contact">
  <div class="contact-page__container">
    <h1 class="contact-page__title">Contact me</h1>

    <div class="contact-page__grid">

      <div class="contact-page__left">
        <div class="business-card__wrap">
          <div class="flip" tabindex="0" aria-label="Business card (flip on hover or focus)">
            <div class="flip__inner">
              <div class="flip__face flip__front">
                <img src="assets/images/business_card/business_front.svg" class="flip__svg" alt="Business card front" />
              </div>
              <div class="flip__face flip__back">
                <img src="assets/images/business_card/business_back.svg" class="flip__svg" alt="Business card back" />
              </div>
            </div>
          </div>
          <p class="business-card__hint">Hover / tap to flip</p>
        </div>
      </div>


      <div class="contact-page__right">
        <form class="contact-form" action="mailto:you@domain.com" method="post" enctype="text/plain">
          <div class="contact-form__row contact-form__row--2">
            <label class="field">
              <span class="field__label">Name (required)</span>
              <input class="field__input" type="text" name="first_name" placeholder="First Name" required>
            </label>

            <label class="field">
              <span class="field__label" aria-hidden="true">&nbsp;</span>
              <input class="field__input" type="text" name="last_name" placeholder="Last Name" required>
            </label>
          </div>

          <label class="field">
            <span class="field__label">Email (required)</span>
            <input class="field__input" type="email" name="email" required>
          </label>

          <label class="field">
            <span class="field__label">Message (required)</span>
            <textarea class="field__input field__textarea" name="message" rows="4" required></textarea>
          </label>

          <button class="contact-form__btn" type="submit">SUBMIT</button>
        </form>
      </div>
    </div>

  </div>
</section>