<section class="contact-page" id="contact">
  <div class="contact-page__container">
    <h1 class="contact-page__title">Contact me</h1>

    <div class="contact-page__grid">

      <div class="contact-page__left">
        <div class="business-card__wrap">
          <div class="flip" tabindex="0" aria-label="Business card (flip on hover or focus)">
            <div class="flip__inner">
              <div class="flip__face flip__front">
                <img src="assets/images/business_card/business_front.svg" class="flip__svg" alt="Business card front" />
              </div>
              <div class="flip__face flip__back">
                <img src="assets/images/business_card/business_back.svg" class="flip__svg" alt="Business card back" />
              </div>
            </div>
            <div class="flip__hint" aria-hidden="true">
            <span class="flip__hint-text hint--desktop">Hover to flip</span>
            <span class="flip__hint-text hint--mobile">Tap to flip</span>
          </div>
          </div>
        </div>
      </div>


      <div class="contact-page__right">
        <div class="contact-divider">
  <h3 class="contact-divider__text">FORM</h3>
</div>
        <form class="contact-form" action="mailto:you@domain.com" method="post" enctype="text/plain">
  <div class="contact-form__row contact-form__row--2">
    <div class="field">
      <label class="field__label" for="first_name">First name <span class="field__required">*</span></label>
      <input class="field__input" id="first_name" type="text" name="first_name" placeholder="First name" required>
    </div>

    <div class="field">
      <label class="field__label" for="last_name">Last name <span class="field__required"></span></label>
      <input class="field__input" id="last_name" type="text" name="last_name" placeholder="Last name">
    </div>
  </div>

  <div class="field">
    <label class="field__label" for="email">Email <span class="field__required">*</span></label>
    <input class="field__input" id="email" type="email" name="email" placeholder="you@email.com" required>
  </div>

  <div class="field">
    <label class="field__label" for="message">Message <span class="field__required">*</span></label>
    <textarea class="field__input field__textarea" id="message" name="message" rows="5" placeholder="Write your message..." required></textarea>
  </div>

  <button class="button-redirect" type="submit">Submit</button>
</form>
      </div>
    </div>

  </div>
</section>